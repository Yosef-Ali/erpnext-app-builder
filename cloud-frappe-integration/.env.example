# Cloud ERPNext App Builder Configuration

# Frappe Cloud/Bench Configuration
FRAPPE_CLOUD_URL=https://your-site.frappe.cloud
FRAPPE_CLOUD_API_KEY=your_cloud_api_key
FRAPPE_CLOUD_API_SECRET=your_cloud_api_secret

# Alternative: Self-hosted Frappe Bench
FRAPPE_BENCH_URL=https://your-bench.example.com
FRAPPE_BENCH_API_KEY=your_bench_api_key
FRAPPE_BENCH_API_SECRET=your_bench_api_secret

# Deployment Configuration
DEPLOYMENT_TYPE=frappe_cloud  # Options: frappe_cloud, self_hosted, docker
DEPLOYMENT_REGION=us-east-1

# Cloud Storage Configuration (for app files)
CLOUD_STORAGE_PROVIDER=aws  # Options: aws, gcp, azure, frappe_cloud
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=erpnext-apps-storage
AWS_REGION=us-east-1

# Google Cloud Storage (alternative)
GCP_PROJECT_ID=your_gcp_project
GCP_BUCKET_NAME=erpnext-apps-storage
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure Storage (alternative)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=erpnext-apps

# Redis Configuration (for job queues)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Development Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
NOTIFICATION_WEBHOOK=https://your-notification-endpoint.com/webhook

# Security
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Build Configuration
BUILD_TIMEOUT=900  # 15 minutes
MAX_CONCURRENT_BUILDS=3
CLEANUP_OLD_BUILDS=true
KEEP_BUILDS_DAYS=30
